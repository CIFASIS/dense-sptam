<launch>

  <!-- Set use_sim_time true for datasets-->
  <param name="use_sim_time" value="true"/>

  <!-- static_transform_publisher x y z yaw pitch roll frame_id child_frame_id-->
  <node pkg="tf2_ros" type="static_transform_publisher" name="camera_broadcaster" args="0 0 0 0 0 0 base_link left_camera" />

  <!-- uncompress the images -->
  <group ns="stereo">
    <group ns="left">
      <node name="republish_left" pkg="image_transport" type="republish" output="screen" args="compressed in:=image_raw raw out:=image_rect" />
    </group>
    <group ns="right">
      <node name="republish_right" pkg="image_transport" type="republish" output="screen" args="compressed in:=image_raw raw out:=image_rect" />
    </group>
  </group>

  <!--
    Master nodelet manager.
  -->
  <node name="nodelet_manager" pkg="nodelet" type="nodelet" args="manager" output="screen" clear_params="true" />

  <!-- S-PTAM node -->
  <node pkg="nodelet" type="nodelet" name="sptam" args="load sptam/sptam_nodelet nodelet_manager" output="screen" clear_params="true">

    <!-- Read S-PTAM parameters file -->
    <rosparam command="load" file="$(find sptam)/configurationFiles/tsukuba.yaml" />

    <param name="approximate_sync" value="false" />
    <param name="camera_frame" value="left_camera"/>
    <param name="use_odometry" value="false"/>

    <remap from="/stereo/left/image_rect" to="/stereo/left/image_rect"/>
    <remap from="/stereo/right/image_rect" to="/stereo/right/image_rect"/>
    <remap from="/stereo/left/camera_info"  to="/stereo/left/camera_info"/>
    <remap from="/stereo/right/camera_info"  to="/stereo/right/camera_info"/>

  </node>

  <!-- DENSE node -->
  <!--
  -->
  <node pkg="nodelet" type="nodelet" name="dense" args="load dense/denseNodelet nodelet_manager" output="screen" clear_params="true">

    <param name="approximate_sync" value="false" />
    <param name="camera_frame" value="left_camera"/>

    <param name="disp_calc_method" value="libelas"/>
	<param name="max_distance" value="10"/>
    <param name="VoxelLeafSize" value="0"/>

	<param name="stereoscan_threshold" value="0.25"/>
    <!--param name="fusion_heuristic" value="simpleMean"/-->
    <param name="fusion_heuristic" value="inverseDepthDistances"/>

	<param name="FrustumNearPlaneDist" value="0.0001"/>
  <param name="FrustumFarPlaneDist" value="20"/>
	<param name="libelas_ipol_gap" value="1000"/>

	<param name="local_area_size" value="10"/>
	<param name="pub_area_filter_min" value="0"/>

	<param name="refinement_linear_threshold" value="0.01"/>
	<param name="refinement_angular_threshold" value="0.001"/>

    <remap from="/dense/keyframes" to="/sptam/keyframes"/>

  </node>
  <!--
	<param name="single_depth_map_clouds" value="/BACKUP/tesina/datasets/tsukuba/NewTsukubaStereoDataset/illumination/daylight/my_cloud/thre_0.25"/>
	<param name="single_depth_map_poses" value="/BACKUP/tesina/datasets/tsukuba/NewTsukubaStereoDataset/illumination/daylight/my_cloud/thre_0.25/poses.txt"/>

    <param name="single_cloud_path" value="/BACKUP/tesina/datasets/tsukuba/NewTsukubaStereoDataset/illumination/daylight/my_cloud/thre_0.25"/>
	<param name="single_depth_map_clouds" value="/BACKUP/tesina/datasets/tsukuba/NewTsukubaStereoDataset/illumination/daylight/my_cloud/thre_0.25"/>
	<param name="single_depth_map_poses" value="/BACKUP/tesina/datasets/tsukuba/NewTsukubaStereoDataset/illumination/daylight/my_cloud/thre_0.25/poses.txt"/>
	<param name="single_cloud_path" value="/home/adalessandro/.ros/velo"/>
	<param name="single_cloud_path" value="/home/adalessandro/.ros/clouds"/>
  -->

</launch>
